                  "Fn::Join": [
                    ":",
                    [
                      "arn",
                      {
                        "Ref": "AWS::Partition"
                      },
                      "iot",
                      {
                        "Ref": "AWS::Region"
                      },
                      {
                        "Ref": "AWS::AccountId"
                      },
                      "topic/ajm/iot:Connection.Thing.ThingTypeName/iot:Connection.Thing.Attributes[client]}/iot:Connection.Thing.Attributes[city]/iot:Connection.Thing.ThingName/*"
                    ]
