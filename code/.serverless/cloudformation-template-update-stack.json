{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The AWS CloudFormation template for this Serverless application",
  "Resources": {
    "TestFleetLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": "/aws/lambda/test-code-cp-testFleet",
        "RetentionInDays": 3
      }
    },
    "IamRoleLambdaExecution": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": {
              "Fn::Join": [
                "-",
                [
                  "test-code",
                  "cp",
                  "lambda"
                ]
              ]
            },
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogStream",
                    "logs:CreateLogGroup"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/test-code-cp*:*"
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:PutLogEvents"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/test-code-cp*:*:*"
                    }
                  ]
                }
              ]
            }
          }
        ],
        "Path": "/",
        "RoleName": {
          "Fn::Join": [
            "-",
            [
              "test-code",
              "cp",
              {
                "Ref": "AWS::Region"
              },
              "lambdaRole"
            ]
          ]
        }
      }
    },
    "TestFleetLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": "amanda-test-bucket",
          "S3Key": "serverless/test-code/cp/1636475610898-2021-11-09T16:33:30.898Z/test-code.zip"
        },
        "Handler": "handler.getSKU",
        "Runtime": "nodejs14.x",
        "FunctionName": "test-code-cp-testFleet",
        "MemorySize": 512,
        "Timeout": 6,
        "Environment": {
          "Variables": {
            "STAGE": "cp",
            "REGION": "us-east-1",
            "ACCOUNT_ID": {
              "Ref": "AWS::AccountId"
            },
            "SANITIZE_LOGS": "true",
            "LOG_LEVEL": "TRACE"
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "IamRoleLambdaExecution",
            "Arn"
          ]
        }
      },
      "DependsOn": [
        "TestFleetLogGroup"
      ]
    },
    "TestFleetIotProvisioningTemplate": {
      "Type": "AWS::IoT::ProvisioningTemplate",
      "Properties": {
        "Enabled": true,
        "PreProvisioningHook": {
          "TargetArn": {
            "Fn::GetAtt": [
              "TestFleetLambdaFunction",
              "Arn"
            ]
          }
        },
        "ProvisioningRoleArn": "arn:aws:iam::340456311184:role/IoTProvisionByClaimRole-TEST",
        "TemplateBody": "{\"Parameters\":{\"SKU\":{\"Type\":\"String\"},\"region\":{\"Type\":\"String\"},\"client\":{\"Type\":\"String\"},\"city\":{\"Type\":\"String\"},\"AWS::IoT::Certificate::Id\":{\"Type\":\"String\"},\"MACAddress\":{\"Type\":\"String\"}},\"Resources\":{\"certificate\":{\"Properties\":{\"CertificateId\":{\"Ref\":\"AWS::IoT::Certificate::Id\"},\"Status\":\"Active\"},\"Type\":\"AWS::IoT::Certificate\"},\"policy\":{\"Properties\":{\"PolicyDocument\":\"{\\n  \\\"Version\\\": \\\"2012-10-17\\\",\\n  \\\"Statement\\\": [\\n    {\\n      \\\"Effect\\\": \\\"Allow\\\",\\n      \\\"Action\\\": [\\n        \\\"iot:Connect\\\",\\n        \\\"iot:Receive\\\",\\n        \\\"iot:Publish\\\",\\n        \\\"iot:Subscribe\\\"\\n      ],\\n      \\\"Resource\\\": [\\n        \\\"*\\\"\\n      ]\\n    }\\n  ]\\n}\"},\"Type\":\"AWS::IoT::Policy\"},\"thing\":{\"OverrideSettings\":{\"AttributePayload\":\"MERGE\",\"ThingGroups\":\"DO_NOTHING\",\"ThingTypeName\":\"REPLACE\"},\"Properties\":{\"AttributePayload\":{\"region\":{\"Ref\":\"region\"},\"client\":{\"Ref\":\"client\"},\"city\":{\"Ref\":\"city\"}},\"ThingGroups\":[],\"ThingName\":{\"Fn::Join\":[\"\",[\"ksk_\",{\"Ref\":\"SKU\"}]]}},\"Type\":\"AWS::IoT::Thing\"}}}"
      },
      "DependsOn": [
        "TestFleetLambdaPermissionIotProvisioningTemplate"
      ]
    },
    "TestFleetLambdaPermissionIotProvisioningTemplate": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "FunctionName": {
          "Fn::GetAtt": [
            "TestFleetLambdaFunction",
            "Arn"
          ]
        },
        "Action": "lambda:InvokeFunction",
        "Principal": "iot.amazonaws.com"
      }
    },
    "ioTProvisionByClaimRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "IoTProvisionByClaimRole-TEST",
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "iot.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSIoTThingsRegistration"
        ]
      }
    }
  },
  "Outputs": {
    "ServerlessDeploymentBucketName": {
      "Value": "amanda-test-bucket",
      "Export": {
        "Name": "sls-test-code-cp-ServerlessDeploymentBucketName"
      }
    }
  }
}