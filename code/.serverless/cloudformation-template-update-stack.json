                  ]
                },
                {
                  "Fn::Join": [
                    ":",
                    [
                      "arn",
                      {
                        "Ref": "AWS::Partition"
                      },
                      "iot",
                      {
                        "Ref": "AWS::Region"
                      },
                      {
                        "Ref": "AWS::AccountId"
                      },
                      "topicfilter/$aws/things/iot:Connection.Thing.ThingName/*"
                    ]
                  ]
                }
              ]
            }
          ]
        },
        "PolicyName": "ProvisionByClaimPolicyAJM"
      }
    }
  },
  "Outputs": {
