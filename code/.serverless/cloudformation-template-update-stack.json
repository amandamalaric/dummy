        "RetentionInDays": 3
      }
    },
    "IamRoleLambdaExecution": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": {
              "Fn::Join": [
                "-",
                [
                  "test-code",
                  "ajm",
                  "lambda"
                ]
              ]
            },
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogStream",
                    "logs:CreateLogGroup"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/test-code-ajm*:*"
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:PutLogEvents"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/test-code-ajm*:*:*"
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "xray:PutTraceSegments",
                    "xray:PutTelemetryRecords"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:GetItem"
                  ],
                  "Resource": [
                    {
                      "Fn::Join": [
                        ":",
                        [
                          "arn",
                          {
                            "Ref": "AWS::Partition"
                          },
                          "dynamodb",
                          {
                            "Ref": "AWS::Region"
                          },
                          {
                            "Ref": "AWS::AccountId"
                          },
                          "table/ProvisioningResourcesServerless"
                        ]
                      ]
                    }
                  ]
                }
              ]
            }
          }
        ],
        "Path": "/",
        "RoleName": {
          "Fn::Join": [
            "-",
            [
              "test-code",
              "ajm",
              {
                "Ref": "AWS::Region"
              },
              "lambdaRole"
            ]
          ]
        }
      }
    },
    "TestFleetLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": "amanda-test-bucket",
          "S3Key": "serverless/test-code/ajm/1636563923220-2021-11-10T17:05:23.220Z/test-code.zip"
        },
        "Handler": "handler.getSKU",
        "Runtime": "nodejs14.x",
        "FunctionName": "test-code-ajm-testFleet",
        "MemorySize": 512,
        "Timeout": 6,
        "Environment": {
          "Variables": {
            "STAGE": "ajm",
            "REGION": "us-east-1",
            "ACCOUNT_ID": {
              "Ref": "AWS::AccountId"
            },
            "SANITIZE_LOGS": "true",
            "LOG_LEVEL": "TRACE",
            "PROVISIONING_TABLE": "ProvisioningResourcesServerless"
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "IamRoleLambdaExecution",
            "Arn"
          ]
        }
      },
      "DependsOn": [
        "TestFleetLogGroup"
      ]
    },
    "ioTProvisionByClaimRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "IoTProvisionByClaimRole-AJM",
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "iot.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "ManagedPolicyArns": [
          {
            "Fn::Join": [
              ":",
              [
                "arn",
                "aws",
                "iam:",
                "aws",
                "policy/service-role/AWSIoTThingsRegistration"
              ]
            ]
          }
        ]
      }
    },
    "provisionByClaimPolicyAJM": {
      "Type": "AWS::IoT::Policy",
      "Properties": {
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "iot:Connect"
