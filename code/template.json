{
  "Parameters": {
    "sku": {
      "Type": "String"
    },
    "region": {
      "Type": "String"
    },
    "env": {
      "Type": "String"
    },
    "client": {
      "Type": "String"
    },
    "city": {
      "Type": "String"
    },
    "AWS::IoT::Certificate::Id": {
      "Type": "String"
    },
    "macAddress": {
      "Type": "String"
    },
    "thingTypeName": {
      "Type": "String"
    }
  },
  "Resources": {
    "certificate": {
      "Properties": {
        "CertificateId": {
          "Ref": "AWS::IoT::Certificate::Id"
        },
        "Status": "Active"
      },
      "Type": "AWS::IoT::Certificate"
    },
    "policy": {
      "Properties": {
        "PolicyName": "{\"Version\": \"2012-10-17\", \"Statement\": [{\"Effect\": \"Allow\", \"Action\": [\"iot:Connect\"], \"Resource\": [\"arn:aws:iot:ca-central-1:340456311184:client/${iot:Connection.Thing.ThingName}\"]}, {\"Effect\": \"Allow\", \"Action\": [\"iot:Publish\", \"iot:Receive\"], \"Resource\": [\"arn:aws:iot:ca-central-1:340456311184:topic/${iot:Connection.Thing.Attributes[env]}/${iot:Connection.Thing.ThingTypeName}/${iot:Connection.Thing.Attributes[client]}/${iot:Connection.Thing.Attributes[city]}/${iot:Connection.Thing.ThingName}/*\", \"arn:aws:iot:ca-central-1:340456311184:topic/$aws/things/${iot:Connection.Thing.ThingName}/*\"]}, {\"Effect\": \"Allow\", \"Action\": [\"iot:Subscribe\"], \"Resource\": [\"arn:aws:iot:ca-central-1:340456311184:topicfilter/${iot:Connection.Thing.Attributes[env]}/${iot:Connection.Thing.ThingTypeName}/${iot:Connection.Thing.Attributes[client]}/${iot:Connection.Thing.Attributes[city]}/${iot:Connection.Thing.ThingName}/*\", \"arn:aws:iot:ca-central-1:340456311184:topicfilter/$aws/things/${iot:Connection.Thing.ThingName}/*\"]}]}"
      },
      "Type": "AWS::IoT::Policy"
    },
    "thing": {
      "Type": "AWS::IoT::Thing",
      "OverrideSettings": {
        "AttributePayload": "MERGE",
        "ThingGroups": "DO_NOTHING",
        "ThingTypeName": "REPLACE"
      },
      "Properties": {
        "AttributePayload": {
          "sku": {
            "Ref": "sku"
          },
          "region": {
            "Ref": "region"
          },
          "client": {
            "Ref": "client"
          },
          "city": {
            "Ref": "city"
          },
          "macAddress": {
            "Ref": "macAddress"
          },
          "env": {
            "Ref": "env"
          }
        },
        "ThingGroups": [],
        "ThingName": {
          "Fn::Join": [
            "",
            [
              "ksk_",
              {
                "Ref": "macAddress"
              }
            ]
          ]
        },
        "ThingTypeName": {
          "Ref": "thingTypeName"
        }
      }
    }
  }
}