{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The AWS CloudFormation template for this Serverless application",
  "Resources": {
    "ProvisionByClaimPreProvisionerLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": "/aws/lambda/provisioning-cp-ProvisionByClaimPreProvisioner",
        "RetentionInDays": 3
      }
    },
    "IamRoleLambdaExecution": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": {
              "Fn::Join": [
                "-",
                [
                  "provisioning",
                  "cp",
                  "lambda"
                ]
              ]
            },
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogStream",
                    "logs:CreateLogGroup"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/provisioning-cp*:*"
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:PutLogEvents"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/provisioning-cp*:*:*"
                    }
                  ]
                }
              ]
            }
          }
        ],
        "Path": "/",
        "RoleName": {
          "Fn::Join": [
            "-",
            [
              "provisioning",
              "cp",
              {
                "Ref": "AWS::Region"
              },
              "lambdaRole"
            ]
          ]
        }
      }
    },
    "ProvisionByClaimPreProvisionerLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": "amanda-test-bucket",
          "S3Key": "serverless/provisioning/cp/1636121469703-2021-11-05T14:11:09.703Z/provisioning.zip"
        },
        "Handler": "handler.lambda_handler",
        "Runtime": "python3.8",
        "FunctionName": "provisioning-cp-ProvisionByClaimPreProvisioner",
        "MemorySize": 512,
        "Timeout": 6,
        "Environment": {
          "Variables": {
            "STAGE": "cp",
            "REGION": "us-east-1",
            "ACCOUNT_ID": {
              "Ref": "AWS::AccountId"
            },
            "SANITIZE_LOGS": "true",
            "LOG_LEVEL": "TRACE"
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "IamRoleLambdaExecution",
            "Arn"
          ]
        }
      },
      "DependsOn": [
        "ProvisionByClaimPreProvisionerLogGroup"
      ]
    }
  },
  "Outputs": {
    "ServerlessDeploymentBucketName": {
      "Value": "amanda-test-bucket",
      "Export": {
        "Name": "sls-provisioning-cp-ServerlessDeploymentBucketName"
      }
    }
  }
}